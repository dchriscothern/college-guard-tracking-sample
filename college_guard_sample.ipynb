# ----------------------------
# 0. Imports
# ----------------------------
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from matplotlib.patches import Circle, Rectangle, Arc
from google.colab import files
from math import pi

plt.style.use("seaborn-v0_8")

# ============================================================
# 1. DATA IMPORT
# ============================================================
print("ðŸ“ Please upload tracking_college_guard_sample.csv")

uploaded = files.upload()
fname = list(uploaded.keys())[0]
df = pd.read_csv(fname)

print("\nLoaded:", fname)
print(df.head())


# ============================================================
# 2. PARAMETERS â€” DATA IS ALREADY NORMALIZED (0â€“50 by 0â€“47)
# ============================================================
COURT_W, COURT_L = 50, 47  # normalized NBA halfcourt baseline


# ============================================================
# 3. COURT DRAWING FUNCTION â€” NBA HALFCOURT (0â€“50 by 0â€“47)
# ============================================================
def draw_nba_halfcourt(ax):
    # Outer boundary
    ax.plot([0, COURT_W], [0, 0], color="black")
    ax.plot([0, 0], [0, COURT_L], color="black")
    ax.plot([COURT_W, COURT_W], [0, COURT_L], color="black")

    # Lane (paint)
    lane_w = 16 * COURT_W / 50      # proportional scaling
    lane_l = 19 * COURT_L / 47

    ax.add_patch(Rectangle(((COURT_W - lane_w)/2, 0),
                           lane_w, lane_l,
                           fill=False, color="black"))

    # Rim
    rim_x = COURT_W / 2
    rim_y = 4 * COURT_L / 47
    ax.add_patch(Circle((rim_x, rim_y), radius=0.75, fill=False, color="black"))

    # Free throw circle (top)
    ft_radius = 6 * COURT_W / 50
    ft_center_y = lane_l
    ax.add_patch(Arc((rim_x, ft_center_y),
                     2*ft_radius, 2*ft_radius,
                     theta1=0, theta2=180, color="black"))
    ax.add_patch(Arc((rim_x, ft_center_y),
                     2*ft_radius, 2*ft_radius,
                     theta1=180, theta2=0, ls="--", color="black"))

    # 3PT arc
    arc_r = 23.75 * COURT_W / 50
    ax.add_patch(Arc((rim_x, rim_y),
                     2*arc_r, 2*arc_r,
                     theta1=22, theta2=158, color="black"))

    # Corners
    ax.plot([5, 5], [0, 14], color="black")
    ax.plot([COURT_W - 5, COURT_W - 5], [0, 14], color="black")

    ax.set_xlim(0, COURT_W)
    ax.set_ylim(COURT_L, 0)
    ax.set_aspect("equal")
    ax.axis("off")
    return ax


# ============================================================
# 4. CLEANING & TIMESTAMPS
# ============================================================
numeric_cols = ["pg_x","pg_y","pg_vx","pg_vy","pg_speed",
                "advantage","def_distance"]

for c in numeric_cols:
    df[c] = pd.to_numeric(df[c], errors="coerce")

# timestamp
if "timestamp_ms" in df.columns:
    df["timestamp_s"] = df["timestamp_ms"] / 1000.0
else:
    df["timestamp_s"] = np.arange(len(df)) * 0.04  # fallback 25 fps

df["advantage"] = df["advantage"].fillna(0).astype(int)


# ============================================================
# 5. DERIVED METRICS
# ============================================================
df["computed_speed"] = np.sqrt(df["pg_vx"]**2 + df["pg_vy"]**2)

df["pg_accel"] = df["pg_speed"].diff() / df["timestamp_s"].diff()
df["pg_accel"] = df["pg_accel"].replace([np.inf, -np.inf], 0).fillna(0)

df["cod_load"] = df["pg_accel"].abs()
df["dist_traveled"] = np.sqrt(df["pg_x"].diff()**2 + df["pg_y"].diff()**2).fillna(0)

speed_thresh = df["pg_speed"].mean() + df["pg_speed"].std()
df["high_speed_flag"] = df["pg_speed"] > speed_thresh

print("âœ” Derived metrics computed.")


# ============================================================
# 6. POSSESSION SUMMARY
# ============================================================
summary = df.groupby("advantage").agg({
    "pg_speed": ["mean","max"],
    "pg_accel": ["mean","max"],
    "cod_load": "mean",
    "dist_traveled": "sum"
})

print("\n===== POSSESSION SUMMARY =====\n")
print(summary)


# ============================================================
# 7. VISUALIZATION 1 â€” Movement Path over NBA Court
# ============================================================
fig, ax = plt.subplots(figsize=(7,13))
draw_nba_halfcourt(ax)
p = ax.scatter(df["pg_x"], df["pg_y"], s=10, c=df["pg_speed"], cmap="viridis")
fig.colorbar(p, label="Speed (m/s)")
ax.set_title("Movement Path Mapped to NBA Half Court")
plt.show()


# ============================================================
# 8. VISUALIZATION 2 â€” Movement Density Heatmap over Court
# ============================================================
fig, ax = plt.subplots(figsize=(7,13))
draw_nba_halfcourt(ax)

sns.kdeplot(
    x=df["pg_x"], y=df["pg_y"],
    cmap="magma", fill=True, bw_adjust=0.45, alpha=0.65, levels=40, thresh=0.05
)

ax.set_title("Movement Density Heatmap (NBA Court)")
plt.show()


# ============================================================
# 9. VISUALIZATION 3 â€” Defender Distance Heatmap
# ============================================================
fig, ax = plt.subplots(figsize=(7,13))
draw_nba_halfcourt(ax)

sns.kdeplot(
    x=df["pg_x"], y=df["pg_y"],
    weights=df["def_distance"],
    cmap="coolwarm", fill=True, bw_adjust=0.55, alpha=0.65, levels=40, thresh=0.05
)

ax.set_title("Defender Distance Heatmap (NBA Court)")
plt.show()


# ============================================================
# 10. VISUALIZATION 4 â€” Advantage Map
# ============================================================
fig, ax = plt.subplots(figsize=(7,13))
draw_nba_halfcourt(ax)

p = ax.scatter(df["pg_x"], df["pg_y"], c=df["advantage"], cmap="bwr", s=25)
fig.colorbar(p, label="Advantage")
ax.set_title("Advantage Map (NBA Court)")
plt.show()


# ============================================================
# 11. Radar Chart
# ============================================================
metrics = {
    "Avg Speed": df["pg_speed"].mean(),
    "Peak Speed": df["pg_speed"].max(),
    "Avg Accel": df["pg_accel"].mean(),
    "COD Load": df["cod_load"].mean(),
    "Separation": df["def_distance"].mean()
}

labels = list(metrics.keys())
vals = list(metrics.values())
vals += vals[:1]

angles = [n / float(len(labels)) * 2*pi for n in range(len(labels))]
angles += angles[:1]

plt.figure(figsize=(6,6))
ax = plt.subplot(111, polar=True)
ax.plot(angles, vals, linewidth=2)
ax.fill(angles, vals, alpha=0.3)
ax.set_xticks(angles[:-1])
ax.set_xticklabels(labels)
plt.title("Player Movement & Advantage Profile")
plt.show()


# ============================================================
# 12. Key Insights
# ============================================================
print("\n===== KEY INSIGHTS =====\n")
print(f"Total distance traveled: {df['dist_traveled'].sum():.2f}")
print(f"Peak speed: {df['pg_speed'].max():.2f} m/s")
print(f"Peak acceleration: {df['pg_accel'].max():.2f} m/sÂ²")
print(f"Average defender distance: {df['def_distance'].mean():.2f} m\n")
print("Frames per advantage state:")
print(df["advantage"].value_counts().sort_index())
print("\nHigh-speed efforts:", df["high_speed_flag"].sum())
print("\nâœ” All visuals successfully generated.")

