# ----------------------------
# 0. Imports
# ----------------------------
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from google.colab import files
from math import pi
from matplotlib.patches import Circle, Rectangle, Arc

plt.style.use("seaborn-v0_8")

# ============================================================
# 1. DATA IMPORT
# ============================================================

print("ðŸ“ Please upload tracking_college_guard_sample.csv")
uploaded = files.upload()
file_name = list(uploaded.keys())[0]
df = pd.read_csv(file_name)

print("\nLoaded file:", file_name)
print(df.head())


# ============================================================
# 2. CLEANING
# ============================================================
numeric_cols = ["pg_x", "pg_y", "pg_vx", "pg_vy", "pg_speed", "def_distance", "advantage"]

for col in numeric_cols:
    df[col] = pd.to_numeric(df[col], errors="coerce")

# Timestamp
if "timestamp_ms" in df.columns:
    df["timestamp_s"] = df["timestamp_ms"] / 1000
else:
    df["timestamp_s"] = np.arange(len(df)) * 0.04

df["advantage"] = df["advantage"].fillna(0).astype(int)


# ============================================================
# 3. DERIVED METRICS
# ============================================================
df["computed_speed"] = np.sqrt(df["pg_vx"]**2 + df["pg_vy"]**2)

df["pg_accel"] = df["pg_speed"].diff() / df["timestamp_s"].diff()
df["pg_accel"] = df["pg_accel"].replace([np.inf, -np.inf], np.nan).fillna(0)

df["cod_load"] = df["pg_accel"].abs()

df["dist_traveled"] = np.sqrt(df["pg_x"].diff()**2 + df["pg_y"].diff()**2).fillna(0)

speed_threshold = df["pg_speed"].mean() + df["pg_speed"].std()
df["high_speed_flag"] = df["pg_speed"] > speed_threshold


# ============================================================
# 4. TRANSFORM TO NBA HALFCOURT COORDINATES
# ============================================================

# NBA halfcourt limits (feet)
nba_x_min, nba_x_max = -250, 250
nba_y_min, nba_y_max = -47.5, 422.5

def scale_to_range(series, new_min, new_max):
    """Linearly scale tracking coordinates â†’ NBA court space."""
    old_min = series.min()
    old_max = series.max()
    return ((series - old_min) / (old_max - old_min)) * (new_max - new_min) + new_min

df["x_ft"] = scale_to_range(df["pg_x"], nba_x_min, nba_x_max)
df["y_ft"] = scale_to_range(df["pg_y"], nba_y_min, nba_y_max)


# ============================================================
# 5. NBA COURT OVERLAY (YOUR WORKING VERSION)
# ============================================================
def draw_court(ax=None, color='black', lw=2):
    if ax is None:
        ax = plt.gca()

    hoop = Circle((0, 0), radius=7.5, linewidth=lw, color=color, fill=False)
    backboard = Rectangle((-30, -7.5), 60, -1, linewidth=lw, color=color)

    outer_paint = Rectangle((-80, -47.5), 160, 190, linewidth=lw, color=color, fill=False)
    inner_paint = Rectangle((-60, -47.5), 120, 190, linewidth=lw, color=color, fill=False)

    free_throw_top = Arc((0, 142.5), 120, 120, theta1=0, theta2=180, linewidth=lw, color=color)
    free_throw_bottom = Arc((0, 142.5), 120, 120, theta1=180, theta2=0, linewidth=lw, color=color, linestyle='--')

    restricted = Arc((0, 0), 80, 80, theta1=0, theta2=180, linewidth=lw, color=color)

    three_arc = Arc((0, 0), 475, 475, theta1=22, theta2=158, linewidth=lw, color=color)

    corner_three_a = Rectangle((-220, -47.5), 0, 140, linewidth=lw, color=color)
    corner_three_b = Rectangle((220, -47.5), 0, 140, linewidth=lw, color=color)

    half_court = Rectangle((-250, 422.5), 500, 0, linewidth=lw, color=color)

    court = [
        hoop, backboard, outer_paint, inner_paint,
        free_throw_top, free_throw_bottom, restricted,
        three_arc, corner_three_a, corner_three_b, half_court
    ]

    for element in court:
        ax.add_patch(element)

    ax.set_xlim(-250, 250)
    ax.set_ylim(422.5, -47.5)
    ax.set_aspect('equal')
    ax.axis('off')
    return ax


# ============================================================
# 6. VISUALIZATION 1 â€” Movement Path (NBA Court)
# ============================================================
fig, ax = plt.subplots(figsize=(8,12))
draw_court(ax)

p = ax.scatter(df["x_ft"], df["y_ft"], c=df["pg_speed"], cmap="viridis", s=25)
fig.colorbar(p, label="Speed (m/s)")

ax.set_title("Movement Path Mapped to NBA Half Court")
plt.show()


# ============================================================
# 7. VISUALIZATION 2 â€” Movement Density Heatmap
# ============================================================
fig, ax = plt.subplots(figsize=(8,12))
draw_court(ax)

sns.kdeplot(
    x=df["x_ft"], y=df["y_ft"],
    cmap="magma", fill=True, bw_adjust=0.6, thresh=0.05, levels=40, alpha=0.8
)

ax.set_title("Movement Density Heatmap (NBA Court)")
plt.show()


# ============================================================
# 8. VISUALIZATION 3 â€” Defender Distance Heatmap
# ============================================================
fig, ax = plt.subplots(figsize=(8,12))
draw_court(ax)

sns.kdeplot(
    x=df["x_ft"], y=df["y_ft"],
    weights=df["def_distance"],
    cmap="coolwarm", fill=True, bw_adjust=0.6, thresh=0.05, levels=40
)

ax.set_title("Defender Distance Heatmap (NBA Court)")
plt.show()


# ============================================================
# 9. VISUALIZATION 4 â€” Advantage Map
# ============================================================
fig, ax = plt.subplots(figsize=(8,12))
draw_court(ax)

p = ax.scatter(df["x_ft"], df["y_ft"], c=df["advantage"], cmap="bwr", s=30)
fig.colorbar(p, label="Advantage State")

ax.set_title("Advantage Map (NBA Court)")
plt.show()


# ============================================================
# 10. SUMMARY OUTPUT
# ============================================================
print("\n===== KEY INSIGHTS =====\n")
print(f"Total distance traveled: {df['dist_traveled'].sum():.2f} m")
print(f"Peak speed: {df['pg_speed'].max():.2f} m/s")
print(f"Peak acceleration: {df['pg_accel'].max():.2f} m/sÂ²")
print(f"Average defender distance: {df['def_distance'].mean():.2f} m\n")
print("Frames by advantage state:")
print(df["advantage"].value_counts().sort_index())
print("\nHigh-speed efforts:", df["high_speed_flag"].sum())
print("\nâœ” All visuals generated successfully.")
