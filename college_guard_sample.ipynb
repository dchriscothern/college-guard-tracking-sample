# ----------------------------
# 0. Imports
# ----------------------------
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from google.colab import files
from math import pi

plt.style.use("seaborn-v0_8")

# ============================================================
# 1. DATA IMPORT
# ============================================================
print("üìÅ Please upload tracking_college_guard_sample.csv")

uploaded = files.upload()
file_name = list(uploaded.keys())[0]
df = pd.read_csv(file_name)

print("\nLoaded file:", file_name)
print(df.head())


# ============================================================
# 2. DETECT RAW DATA SCALE (Meters vs. Feet)
# ============================================================
def detect_court_scale(df, x_col="pg_x", y_col="pg_y"):
    x = pd.to_numeric(df[x_col], errors="coerce")
    y = pd.to_numeric(df[y_col], errors="coerce")

    x_span = x.max() - x.min()
    y_span = y.max() - y.min()

    # Simple heuristic
    unit = "meters" if max(x_span, y_span) < 25 else "feet"

    return {
        "unit": unit,
        "x_min": float(x.min()),
        "x_max": float(x.max()),
        "y_min": float(y.min()),
        "y_max": float(y.max())
    }

scale_info = detect_court_scale(df)
print("\n===== COURT SCALE DETECTED =====")
print(scale_info)


# ============================================================
# 3. NORMALIZE TO NBA HALF COURT (FOR OVERLAY)
# ============================================================
def normalize_to_nba(df):
    """Rescales pg_x and pg_y into NBA halfcourt coordinates."""
    
    raw_x = df["pg_x"]
    raw_y = df["pg_y"]

    # Raw ranges
    xmin, xmax = raw_x.min(), raw_x.max()
    ymin, ymax = raw_y.min(), raw_y.max()

    # Target NBA halfcourt
    target_xmin, target_xmax = -250, 250
    target_ymin, target_ymax = -47.5, 422.5

    df["court_x"] = ((raw_x - xmin) / (xmax - xmin)) * (target_xmax - target_xmin) + target_xmin
    df["court_y"] = ((raw_y - ymin) / (ymax - ymin)) * (target_ymax - target_ymin) + target_ymin

    return df

df = normalize_to_nba(df)


# ============================================================
# 4. DATA CLEANING & TIMESTAMPS
# ============================================================
numeric_cols = ["pg_x","pg_y","pg_vx","pg_vy","pg_speed","advantage","def_distance"]
df[numeric_cols] = df[numeric_cols].apply(pd.to_numeric, errors="coerce")

if "timestamp_ms" in df.columns:
    df["timestamp_s"] = df["timestamp_ms"] / 1000
else:
    df["timestamp_s"] = np.arange(len(df)) * 0.04  # fallback (25 fps)

df["advantage"] = df["advantage"].fillna(0).astype(int)


# ============================================================
# 5. DERIVED METRICS
# ============================================================
df["computed_speed"] = np.sqrt(df["pg_vx"]**2 + df["pg_vy"]**2)

df["pg_accel"] = df["pg_speed"].diff() / df["timestamp_s"].diff()
df["pg_accel"] = df["pg_accel"].replace([np.inf,-np.inf],np.nan).fillna(0)

df["cod_load"] = df["pg_accel"].abs()
df["dist_traveled"] = np.sqrt(df["pg_x"].diff()**2 + df["pg_y"].diff()**2).fillna(0)

speed_threshold = df["pg_speed"].mean() + df["pg_speed"].std()
df["high_speed_flag"] = df["pg_speed"] > speed_threshold

print("‚úî Derived metrics computed.")


# ============================================================
# 6. POSSESSION SUMMARY
# ============================================================
summary = df.groupby("advantage").agg({
    "pg_speed":["mean","max"],
    "pg_accel":["mean","max"],
    "cod_load":"mean",
    "dist_traveled":"sum"
})

print("\n===== POSSESSION SUMMARY =====\n")
print(summary)


# ============================================================
# 7. OFFICIAL NBA HALF COURT DRAWING
# ============================================================
from matplotlib.patches import Circle, Rectangle, Arc

def draw_nba_court(ax=None, color='black', lw=2):
    if ax is None:
        ax = plt.gca()

    # Court elements
    hoop = Circle((0, 0), radius=7.5, linewidth=lw, color=color, fill=False)
    backboard = Rectangle((-30, -7.5), 60, -1, linewidth=lw, color=color)

    outer_paint = Rectangle((-80, -47.5), 160, 190, linewidth=lw, color=color, fill=False)
    inner_paint = Rectangle((-60, -47.5), 120, 190, linewidth=lw, color=color, fill=False)

    free_throw_top = Arc((0, 142.5), 120, 120, theta1=0, theta2=180, linewidth=lw, color=color)
    free_throw_bottom = Arc((0, 142.5), 120, 120, theta1=180, theta2=0, linewidth=lw, color=color, linestyle='--')

    restricted = Arc((0, 0), 80, 80, theta1=0, theta2=180, linewidth=lw, color=color)

    three_arc = Arc((0, 0), 475, 475, theta1=22, theta2=158, linewidth=lw, color=color)
    corner_three_a = Rectangle((-220, -47.5), 0, 140, linewidth=lw, color=color)
    corner_three_b = Rectangle((220, -47.5), 0, 140, linewidth=lw, color=color)

    halfcourt_line = Rectangle((-250, 422.5), 500, 0, linewidth=lw, color=color)

    for obj in [
        hoop, backboard, outer_paint, inner_paint,
        free_throw_top, free_throw_bottom, restricted,
        three_arc, corner_three_a, corner_three_b, halfcourt_line
    ]:
        ax.add_patch(obj)

    ax.set_xlim(-250, 250)
    ax.set_ylim(422.5, -47.5)
    ax.axis("off")
    ax.set_aspect("equal")

    return ax


# ============================================================
# 8. VISUALIZATION 1 ‚Äî Movement Path with Court Overlay
# ============================================================
plt.figure(figsize=(10,12))
ax = plt.gca()
draw_nba_court(ax)

scatter = ax.scatter(
    df["court_x"], df["court_y"],
    s=20, c=df["pg_speed"], cmap="viridis"
)

plt.colorbar(scatter, label="Speed (m/s)")
plt.title("Movement Path Mapped to NBA Half Court")
plt.show()


# ============================================================
# 9. HEATMAPS
# ============================================================

# 9A: Movement Density
plt.figure(figsize=(10,12))
draw_nba_court()
sns.kdeplot(x=df["court_x"], y=df["court_y"], cmap="magma", fill=True, bw_adjust=0.55, thresh=0.05)
plt.title("Movement Density Heatmap (NBA Court)")
plt.show()

# 9B: Defender Distance Heatmap
plt.figure(figsize=(10,12))
draw_nba_court()
sns.kdeplot(
    x=df["court_x"], y=df["court_y"],
    weights=df["def_distance"],
    cmap="coolwarm", fill=True, bw_adjust=0.55, thresh=0.05
)
plt.title("Defender Distance Heatmap (NBA Court)")
plt.show()


# ============================================================
# 10. Advantage Map
# ============================================================
plt.figure(figsize=(10,12))
draw_nba_court()
plt.scatter(df["court_x"], df["court_y"], c=df["advantage"], cmap="bwr", s=25)
plt.title("Advantage Map (NBA Court)")
plt.colorbar(label="Advantage State")
plt.show()


# ============================================================
# 11. Radar Chart
# ============================================================
metrics = {
    "Avg Speed": df["pg_speed"].mean(),
    "Peak Speed": df["pg_speed"].max(),
    "Avg Accel": df["pg_accel"].mean(),
    "COD Load": df["cod_load"].mean(),
    "Separation": df["def_distance"].mean()
}

labels = list(metrics.keys())
values = list(metrics.values()) + [list(metrics.values())[0]]
angles = [n/float(len(labels)) * 2*pi for n in range(len(labels))] + [0]

plt.figure(figsize=(6,6))
ax = plt.subplot(111, polar=True)
ax.plot(angles, values, linewidth=2)
ax.fill(angles, values, alpha=0.3)
ax.set_xticks(angles[:-1])
ax.set_xticklabels(labels)
plt.title("Player Movement & Advantage Profile")
plt.show()


# ============================================================
# 12. KEY INSIGHTS
# ============================================================
print("\n===== KEY INSIGHTS =====\n")
print(f"Total distance traveled: {df['dist_traveled'].sum():.2f}")
print(f"Peak speed: {df['pg_speed'].max():.2f}")
print(f"Peak acceleration: {df['pg_accel'].max():.2f}")
print(f"Average defender distance: {df['def_distance'].mean():.2f}")
print("\nFrames by advantage state:")
print(df["advantage"].value_counts().sort_index())
